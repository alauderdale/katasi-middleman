<!doctype html>
%html
  %head
    %meta{:charset => "utf-8"}
    %meta{:content => "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}
    %title 
      =data.page.title || "Katasi"
    = stylesheet_link_tag "style"
    %link{href: "/images/favicon.ico", rel: "shortcut icon"}
    = javascript_include_tag"lib/jquery", "lib/bootstrap","lib/jquery.fancybox.pack.js","lib/helpers/jquery.fancybox-media.js", "scripts"
    %body{:class => page_classes}
      %nav.sliding-menu.slide-menu-right
        %button.close-menu.nav-toggler 
          %i.md.md-close
        .clearfix
        =partial"layouts/nav-links"
      #wrapper
        = partial "layouts/header"
        /end menu
        .main
          = yield
        /end main content
        = partial "layouts/footer"
        = javascript_include_tag "lib/classie.js","lib/nav.js"